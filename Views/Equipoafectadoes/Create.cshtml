@model PlanCanjeWeb.Models.Equipoafectado

@{
    ViewData["Title"] = "Registrar Equipo Afectado";
}

<h1>Registrar Equipo Afectado</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Cliente" class="control-label"></label>
                <input asp-for="Cliente" class="form-control" />
                <span asp-validation-for="Cliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModeloDrive" class="control-label"></label>
                <input asp-for="ModeloDrive" class="form-control" />
                <span asp-validation-for="ModeloDrive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroSerie" class="control-label"></label>
                <input asp-for="NumeroSerie" class="form-control" />
                <span asp-validation-for="NumeroSerie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFabricacion" class="control-label"></label>
                <input asp-for="FechaFabricacion" class="form-control" />
                <span asp-validation-for="FechaFabricacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FallaDeclarada" class="control-label"></label>
                <input asp-for="FallaDeclarada" class="form-control" />
                <span asp-validation-for="FallaDeclarada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorreoElectronico" class="control-label"></label>
                <input asp-for="CorreoElectronico" class="form-control" />
                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al Listado</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
